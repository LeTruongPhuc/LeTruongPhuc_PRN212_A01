<Window x:Class="LeTruongPhucWPF.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhân viên" Height="516" Width="972" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
            <Label Content="Tên:"/>
            <TextBox x:Name="txtName" Width="230" Height="35"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,12">
            <Label Content="Username:"/>
            <TextBox x:Name="txtUserName" Width="230" Height="35"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,12">
            <Label Content="Mật khẩu:"/>
            <PasswordBox x:Name="txtPassword" Width="230" Height="35"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,0,0,12">
            <Label Content="Chức vụ:"/>
            <TextBox x:Name="txtJobTitle" Width="230" Height="35"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button Content="Đăng nhập" Width="200" Click="BtnSave_Click" Height="54"/>
        </StackPanel>
    </Grid>
</Window>