<Window x:Class="LeTruongPhucWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Login" Height="324" Width="437" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow" Background="#f1f5f9">
    <Border CornerRadius="18" Background="#fff" Margin="16" Padding="18" BorderBrush="#2563eb" BorderThickness="2">
        <StackPanel>
            <TextBlock Text="EMPLOYEE LOGIN" FontSize="22" FontWeight="Bold" Foreground="#2563eb" Margin="0,0,0,24" HorizontalAlignment="Center"/>
            <TextBlock Text="User Name:" Margin="0,0,0,3"/>
            <TextBox Name="txtUserName" Height="32" Margin="0,0,0,10" FontSize="15"/>
            <TextBlock Text="Password:" Margin="0,0,0,3"/>
            <PasswordBox Name="txtPassword" Height="32" Margin="0,0,0,20" FontSize="15"/>
            <Button Content="Login" Width="110" Height="36" Background="#2563eb" Foreground="White"
                    FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"
                    Click="BtnLogin_Click"/>
        </StackPanel>
    </Border>
</Window>