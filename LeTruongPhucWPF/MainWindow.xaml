<Window x:Class="LeTruongPhucWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Management" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and CRUD buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,10,0"/>
            <Button Content="Tìm" Width="70" Margin="0,0,10,0" Click="BtnSearch_Click"/>
            <Button Content="Thêm" Width="70" Margin="0,0,10,0" Click="BtnAdd_Click"/>
            <Button Content="Sửa" Width="70" Margin="0,0,10,0" Click="BtnEdit_Click"/>
            <Button Content="Xóa" Width="70" Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- Employee DataGrid -->
        <DataGrid x:Name="dgEmployees"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="50"/>
                <DataGridTextColumn Header="Tên" Binding="{Binding Name}" Width="130"/>
                <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="100"/>
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding JobTitle}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Thoát -->
        <Button Content="Thoát" Grid.Row="2" Width="80" HorizontalAlignment="Right" Click="BtnExit_Click"/>
    </Grid>
</Window>