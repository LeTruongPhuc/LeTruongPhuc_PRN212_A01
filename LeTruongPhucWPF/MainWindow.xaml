<Window x:Class="LeTruongPhucWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Order Management"
        Height="650"
        Width="1000"
        Background="#f8fafc"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style for TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="RowBackground" Value="#f1f5f9"/>
            <Setter Property="AlternatingRowBackground" Value="#e2e8f0"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#cbd5e1"/>
            <Setter Property="VerticalGridLinesBrush" Value="#cbd5e1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderBrush" Value="#64748b"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <!-- Style for Button -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="Background" Value="#2563eb"/>
            <Setter Property="BorderBrush" Value="#1e40af"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1e293b" BlurRadius="6" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1d4ed8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style for TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="#2563eb"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Background" Value="#f1f5f9"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="110"/>
        </Style>
        <!-- Style for DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="BorderBrush" Value="#2563eb"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Background" Value="#f1f5f9"/>
            <Setter Property="Foreground" Value="#334155"/>
        </Style>
        <!-- Style for StackPanel -->
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
        </Style>
        <!-- Style for TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1e293b"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>
        <!-- Style for Grid -->
        <Style TargetType="Grid">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <!-- Products Tab -->
            <TabItem Header="Products">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3.5*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="9" Background="#e0e7ef" Padding="10" Margin="0 0 0 10" BorderBrush="#2563eb" BorderThickness="1.5" >
                        <DataGrid Name="dgProducts" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="dgProducts_SelectionChanged" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="*"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <TextBox Name="txtProdID" Width="70" ToolTip="Product ID"/>
                        <TextBox Name="txtProdName" Width="120" ToolTip="Product Name"/>
                        <TextBox Name="txtProdPrice" Width="100" ToolTip="Price"/>
                        <TextBox Name="txtProdStock" Width="100" ToolTip="Stock"/>
                        <Button Content="Add" Click="BtnAddProduct_Click"/>
                        <Button Content="Update" Click="BtnUpdateProduct_Click"/>
                        <Button Content="Delete" Click="BtnDeleteProduct_Click"/>
                        <TextBox Name="txtSearchProduct" Width="120" ToolTip="Search Name..."/>
                        <Button Content="Search" Click="BtnSearchProduct_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Customers Tab -->
            <TabItem Header="Customers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3.5*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="9" Background="#e0e7ef" Padding="10" Margin="0 0 0 10" BorderBrush="#2563eb" BorderThickness="1.5" >
                        <DataGrid Name="dgCustomers" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="dgCustomers_SelectionChanged" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="*"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <TextBox Name="txtCustID" Width="70" ToolTip="Customer ID"/>
                        <TextBox Name="txtCustName" Width="120" ToolTip="Customer Name"/>
                        <TextBox Name="txtCustEmail" Width="140" ToolTip="Email"/>
                        <Button Content="Add" Click="BtnAddCustomer_Click"/>
                        <Button Content="Update" Click="BtnUpdateCustomer_Click"/>
                        <Button Content="Delete" Click="BtnDeleteCustomer_Click"/>
                        <TextBox Name="txtSearchCustomer" Width="120" ToolTip="Search Name or Email"/>
                        <Button Content="Search" Click="BtnSearchCustomer_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Orders Tab -->
            <TabItem Header="Orders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3.5*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" CornerRadius="9" Background="#e0e7ef" Padding="10" Margin="0 0 0 10" BorderBrush="#2563eb" BorderThickness="1.5" >
                        <DataGrid Name="dgOrders" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="dgOrders_SelectionChanged"
                                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="*"/>
                                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerID}" Width="*"/>
                                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <StackPanel Grid.Row="1">
                        <TextBox Name="txtOrderID" Width="80" ToolTip="Order ID"/>
                        <TextBox Name="txtOrderCustID" Width="80" ToolTip="Customer ID"/>
                        <DatePicker Name="dpOrderDate" Width="160" ToolTip="Order Date"/>
                        <Button Content="Add" Click="BtnAddOrder_Click"/>
                        <Button Content="Update" Click="BtnUpdateOrder_Click"/>
                        <Button Content="Delete" Click="BtnDeleteOrder_Click"/>
                        <TextBox Name="txtSearchOrder" Width="120" ToolTip="Search Order/Customer ID"/>
                        <Button Content="Search" Click="BtnSearchOrder_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>